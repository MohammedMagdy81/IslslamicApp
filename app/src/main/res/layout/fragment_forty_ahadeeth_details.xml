<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ahadeeth.FortyAhadeethDetailsFragment">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="12dp"
       android:paddingVertical="4dp"
        android:id="@+id/hadeethName"
        android:text="الحديث الاول "
        android:background="#5C119BC6"
        android:fontFamily="@font/cairo_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHadeeth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        tools:listitem="@layout/item_hadeeth_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hadeethName" />

</androidx.constraintlayout.widget.ConstraintLayout>